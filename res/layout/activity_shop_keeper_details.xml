<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shop_keeper_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    tools:context="com.anurag.rebel.customerappstart.ShopKeeperDetails"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MsgTop"
        android:gravity="center"
        android:typeface="serif"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="The details of the Shopkeeper and the Services provided is below."
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Shopname"
        android:typeface="monospace"
        android:textSize="15dp"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:typeface="monospace"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Shopname"
        android:text=""
        android:textStyle="italic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact"
        android:typeface="monospace"
        android:textSize="15dp"
        android:layout_below="@+id/email"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        />

    <ListView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/ServiceList"
            android:layout_below="@+id/contact"
            ></ListView>
    <Switch
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/navSwitch"
        android:textColor="#000"
        android:textStyle="normal"
        android:gravity="center"
        android:typeface="serif"
        android:layout_marginTop="20dp"
        android:text="Confirm this Shopkeeper for Servicing"
        android:textSize="20dp"
        android:layout_alignParentRight="true"/>

    <Button
    android:layout_width="197dp"
    android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
    android:background="@color/colorPrimary"
        android:textColor="#fff"
    android:id="@+id/sbtn"
    android:onClick="ConfirmRequest"
    android:text="Finalise your request"
    android:layout_marginLeft="80dp"
    android:layout_below="@+id/navSwitch"/>
</LinearLayout>
</ScrollView>

